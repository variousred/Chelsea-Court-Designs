<div id="portfolio">
  <%- @page.images.each do |i| %>
    <%= link_to image_tag(i.thumbnail("100x100#c").url, {:rel => "portfolio"}), i.thumbnail("900x600").url %>
  <% end %>
</div>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "colorbox" %>
<% end %>
<% content_for :javascripts do %>
  <%= javascript_include_tag "http://code.jquery.com/jquery.min.js", "jquery.colorbox-min" %>
  <%= javascript_tag do %>
  
  $(function()
  {
    $('#portfolio a').colorbox({
      speed: 500,
      rel: true
    });
  });
  
  <% end %>
<% end %>