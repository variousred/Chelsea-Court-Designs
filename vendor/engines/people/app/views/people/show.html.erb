<section id='body_content'>
  <section>
    <p>
      <%= image_fu @person.photo, nil %>
    </p>
  </section>
  <ul id="people">
    <% @people.each do |person| %>
      <li>
        <%= link_to person.name, person_path(person), {:class => "#{'current' if current_page?(person_path(person)) }"} %>
      </li>
    <% end %>
  </ul>
</section>
<section id='side_body_content'>

    <% if @page.siblings %>
      <%= render(:partial => "/shared/menu", :locals => {
                   :dom_id => 'sub_menu',
                   :css => 'menu',
                   :roots => @page.parent.children
                 }) %>
    <% end %>
    <section id="scroller">
      <div>
        <h1>
          <%=raw @person.name %>
        </h1>
        <%=raw @person.bio %>
      </div>
    </section>
</section>

